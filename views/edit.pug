doctype html
html
  head
    title= title
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    meta(http-equiv="X-UA-Compatible" content="ie=edge")
    link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css")
  body
    div.container
      <h1>แก้ไขข้อมูลของ : #{TherapyData.name}<h1>
      form(action='/therapies/'+TherapyData._id, method='post')
          div.col-6
              label(for='name') ชื่อ :
              input(type='text', name='name', maxlength='30', placeholder='ชื่อ', required, value = TherapyData.name)
          div.col-6
              label(for='title') เข่า :
              input(type='number', name='knee', min="0", max="100", placeholder='จำนวนรอบ', required, value = TherapyData.knee)
          div.col-6
              label(for="speed") ความเร็ว :
              input(type='number', name='speed', min="0", max="100", placeholder='ความเร็ว', value = TherapyData.speed)
          div.col-6
              input.btn.btn-primary(type='submit', value='แก้ไข')